doctype html
html(ng-app="adminCatalog")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= title

        link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.css')
    body()
        .container
            h1= title
            p Welcome to #{title}
            #content(ng-view)

        script(type='text/javascript' src='/bower_components/angular/angular.js')
        script(type='text/javascript' src='/bower_components/angular-route/angular-route.js')
        script(type='text/javascript' src='/bower_components/jquery/dist/jquery.js')
        script(type='text/javascript' src='/admin/app.js')
        script(type='text/javascript' src='/admin/list/list.js')